#!/bin/sh

set -e

sudo dscl . -passwd /Users/distiller "$AUTO_VO_PASSWORD"

# Turn off splash screen
/usr/libexec/PlistBuddy -c "Set :doNotShowSplashScreen YES" \
  ~/Library/Preferences/com.apple.VoiceOverTraining.plist || \
  /usr/libexec/PlistBuddy -c "Add :doNotShowSplashScreen bool YES" \
  ~/Library/Preferences/com.apple.VoiceOverTraining.plist

# start VoiceOver
/System/Library/CoreServices/VoiceOver.app/Contents/MacOS/VoiceOverStarter

# open "$1" -a Safari

sleep 3

open -a "VoiceOver Utility"

sleep 3

# send key events to check VoiceOver applescript enablement and enter password

echo "enable applescript"
osascript -e 'tell application "System Events"' \
 -e "key code 124" \
 -e "key code 124" \
 -e "key code 124" \
 -e "key code 124" \
 -e "key code 124" \
 -e "key code 124" \
 -e "key code 124" \
 -e "key code 124" \
 -e "key code 124" \
 -e "key code 124" \
 -e "key code 49" \
 -e "end tell"

echo "confirmation"
osascript -e 'tell application "SecurityAgent"' \
 -e "set value of 'User Name:' to '$USER'" \
 -e "set value of 'Password:' to '$AUTO_VO_PASSWORD'" \
 -e "click button 'Modify Settings'" \
 -e "end tell"

sleep 1

echo "Copy phrase"
osascript -e 'tell application "VoiceOver"' \
  -e "copy to pasteboard last phrase" \
  -e "grab screenshot vo cursor" \
  -e "end tell"

expected="$2"
actual="$(pbpaste)"

echo $actual

if [[ "$actual" =~ .*"$expected".* ]]; then
  echo "üëç passed assertion"
else
  echo "‚ùåfailed 1 assertion. Expected \"$expected\" in \"$actual\""
fi
